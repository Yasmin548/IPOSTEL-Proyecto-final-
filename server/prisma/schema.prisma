generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


//As√≠ vas a crear las tablas, las haces con modelos, muy limpio, luego te explico
model user{
  id Int @id @default(autoincrement())
  name String
  lastname String
  email String @unique
  password String
  role String?
}